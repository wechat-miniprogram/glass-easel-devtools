body {
  margin: 0;
  height: 100vh;
}

.wrapper {
  font-family: monospace;
  font-size: 12px;
  background: #eee;
  height: 100%;
  cursor: default;
}

.main {
  display: flex;
  height: 100%;
}
.tree {
  flex: 1 1 auto;
  margin: 5px;
  overflow: auto;
}
.detail {
  flex: none;
  box-sizing: border-box;
  width: 300px;
  border-left: 1px solid #888;
  overflow: auto;
}
