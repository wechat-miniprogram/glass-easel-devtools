@import url('../common.wxss');

@keyframes update-ani {
  from {
    background: @update-bg;
  }
  to {
    background: transparent;
  }
}
.updated {
  background: @update-bg;
  animation-duration: 1s;
  animation-fill-mode: both;
  animation-name: update-ani;
  animation-timing-function: ease;
}

:host {
  display: block;
}

.tag {
  color: @common-text;
  white-space: nowrap;
}

.fold-arrow {
  display: inline-block;
  width: 1em;
  height: 1em;
  line-height: 1em;
  color: #444;
  text-align: center;
}
.fold-arrow-icon {
  width: 1em;
  transition: transform 200ms ease;
}
.fold-arrow-icon_open {
  transform: rotate(90deg);
}

.tag-body {
  display: inline-block;
}
.tag-body_hover {
  background: @hover-bg;
}
.tag-body_selected {
  background: @selected-bg;
}
.tag-body_highlight {
  background-color: rgba(0, 128, 192, 0.25);
}
.tag-text {
  display: inline;
}
.tag-name {
  display: inline-block;
  color: @tag-name;
}

.tag-var-name-wrapper {
  display: inline;
}
.tag-var-name {
  display: inline-block;
  margin-left: 0.25em;
  height: 1em;
  line-height: 1em;
  min-width: 1em;
  text-align: center;
  font-size: 0.8em;
  font-style: italic;
  color: @important-text;
}
.tag-var-name_hover {
  background: @hover-bg;
}

.attribute {
  display: inline-block;
  margin-left: 0.5em;
}
.attribute-name {
  display: inline-block;
  color: @core-attribute-name;
}
.attribute-name_property {
  color: @property-name;
}
.attribute-value {
  display: inline-block;
  color: @attribute-value;
}

.children {
  margin-left: 1em;
}

.virtual-tag-name {
  display: inline-block;
  font-style: italic;
}
.virtual-tag-name_hover {
  background: @selected-bg;
}

.text-content {
  color: @important-text;
  padding: 1px 0;
}
